<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    <Dialog
        id="employeeDetailDialog"
        title="Employee Details"
        endButton="{closeButton}">
        <content>
            <form:SimpleForm id="EmployeeDetail">
                <form:content>
                    <Label text="Employee ID"  />
                    <Input value="{employeeId}" id="empid" />

                    <Label text="Name" />
                    <Input value="{name}" id="empname" />

                    <Label text="City"  />
                    <Input value="{city}" id="empcity"/>
                </form:content>
            </form:SimpleForm>
        </content>
        <buttons>            
                <Button text="Submit" type="Accept" press="onsubmitemployeedetails" />
                <Button text="Close" type="Reject" press="oncloseE"/>           
        </buttons>
    </Dialog>
</core:FragmentDefinition>
