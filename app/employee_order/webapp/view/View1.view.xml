<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="com.employeeorder.controller.View1">
    <App>
        <pages>
            <Page title="Employee Details">
                <content>
                    <TabContainer id="tabContainer" items="{path:'/'}" showAddNewButton="true" itemClose="itemCloseHandler" addNewButtonPress="addNewButtonPressHandler"  tooltip="Add Employee Details">
                        <items>
                            <TabContainerItem id="infoTab"  itemPropertyChanged="onTabItemPressd" name="{name}" additionalText="{employeeId}"  >
                                <content>
                                    <Toolbar>
                                    <Title text="Orders({=${orders}.length})" textAlign="Begin"></Title>
                                        <ToolbarSpacer />
                                        <SearchField
                                            id="searchField"
                                            width="10%"
                                            search="onSearch"
                                            placeholder="Search"
                                        />
                                        <Button
                                            icon="sap-icon://add"
                                            press="onAdd"
                                            tooltip="Add order items"
                                        />
                                    </Toolbar>
                                    <Table id="ordersTable" items="{ path: 'orders'}">
                                        <columns>
                                            <Column>
                                                <Text text="Order ID"/>
                                            </Column>
                                            <Column>
                                                <Text text="Order Name"/>
                                            </Column>
                                            <Column>
                                                <Text text="Price"/>
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem>
                                                <cells>
                                                    <ObjectIdentifier title="{orderId}"/>
                                                    <Text text="{orderName}"/>
                                                    <Text text="{orderPrice}"/>
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </content>
                            </TabContainerItem>
                        </items>
                    </TabContainer>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
